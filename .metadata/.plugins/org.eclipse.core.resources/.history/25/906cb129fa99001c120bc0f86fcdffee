<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="Drama">

	<select id="Drama_getList" parameterType="DramaDto" resultType="DramaDto">
		select * from 
 		(
	 		select
				board_seq
				group_name,
				genre_code,
				drama_title,
				drama_author,
				drama_content,
				drama_images,
				drama_hit,
			    @rownum := @rownum+1 AS rnum
				from drama_tbl A, (select @rownum:=0) B
				
				<if test='key!=null'>
	
					<if test='key=="0"'>
					where genre_code = 00 
					</if>
					<if test='key=="1"'>
					where genre_code = 01 
					</if>
					<if test='key=="2"'>
					where genre_code = 02 
					</if>
					<if test='key=="3"'>
					where genre_code = 03 
					</if>
					<if test='key=="4"'>
					where genre_code = 04
					</if>
					<if test='key=="5"'>
					where genre_code = 05
					</if>
					<if test='key=="6"'>
					where genre_code = 06
					</if>
					<if test='key=="7"'>
					</if>
				
				
				</if> 
		
			
			order by board_seq desc
		) A
		   
		limit #{start}, #{pageSize}     
	</select>
	
	<select id="Drama_getTotal" parameterType="DramaDto" resultType="Integer">
		select count(*) from drama_tbl 
		<if test='key!=null'>
	
					<if test='key=="0"'>
					where genre_code = 00 
					</if>
					<if test='key=="1"'>
					where genre_code = 01 
					</if>
					<if test='key=="2"'>
					where genre_code = 02 
					</if>
					<if test='key=="3"'>
					where genre_code = 03 
					</if>
					<if test='key=="4"'>
					where genre_code = 04
					</if>
					<if test='key=="5"'>
					where genre_code = 05
					</if>
					<if test='key=="6"'>
					where genre_code = 06
					</if>
					<if test='key=="7"'>
					</if>
				</if> 
	</select>
	
	<select id="Drama_getView" parameterType="DramaDto" resultType="DramaDto">
	 	select * from webtoon_tbl where board_seq=#{board_seq}
	 </select>
	
	
	

</mapper>








